<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvResult"
        android:layout_weight="1"
        android:height="400dp"
        android:gravity="end"
        android:padding="50dp"
        android:background="@android:color/darker_gray"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="50sp" />


    <TableRow
        android:id="@+id/row2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn1"
            android:layout_marginHorizontal="2dp"
            android:layout_span="3"
            android:textColor="@color/black"
            android:backgroundTint="#D4D4D2"
            android:onClick="btnOnClick"
            android:text="AC" />

        <Button
            android:id="@+id/btn2"
            android:layout_marginHorizontal="2dp"
            android:layout_span="2"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:layout_weight="1"
            android:onClick="btnOnClick"
            android:text="/" />

    </TableRow>

    <TableRow
        android:id="@+id/row3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn3"
            android:layout_marginHorizontal="2dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            android:backgroundTint="#D4D4D2"
            android:text="7" />

        <Button
            android:id="@+id/btn4"
            android:layout_marginHorizontal="2dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            android:backgroundTint="#D4D4D2"
            android:text="8" />

        <Button
            android:id="@+id/btn5"
            android:layout_marginHorizontal="2dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            android:backgroundTint="#D4D4D2"
            android:text="9" />

        <Button
            android:id="@+id/btn6"
            android:layout_marginHorizontal="2dp"
            android:layout_span="2"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:layout_weight="1"
            android:onClick="btnOnClick"
            android:text="*" />
    </TableRow>

    <TableRow
        android:id="@+id/row4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn7"
            android:layout_marginHorizontal="2dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            android:backgroundTint="#D4D4D2"
            android:text="4" />

        <Button
            android:id="@+id/btn8"
            android:layout_marginHorizontal="2dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            android:backgroundTint="#D4D4D2"
            android:text="5" />

        <Button
            android:id="@+id/btn9"
            android:layout_marginHorizontal="2dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            android:backgroundTint="#D4D4D2"
            android:text="6" />

        <Button
            android:id="@+id/btn10"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:onClick="btnOnClick"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="-" />
    </TableRow>

    <TableRow
        android:id="@+id/row5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn11"
            android:layout_marginHorizontal="2dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            android:backgroundTint="#D4D4D2"
            android:text="1" />

        <Button
            android:id="@+id/btn12"
            android:layout_marginHorizontal="2dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            android:backgroundTint="#D4D4D2"
            android:text="2" />

        <Button
            android:id="@+id/btn13"
            android:layout_marginHorizontal="2dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            android:backgroundTint="#D4D4D2"
            android:text="3" />

        <Button
            android:id="@+id/btn14"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:onClick="btnOnClick"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:text="+" />
    </TableRow>

    <TableRow
        android:id="@+id/row6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn15"
            android:layout_marginHorizontal="2dp"
            android:layout_span="2"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            android:backgroundTint="#D4D4D2"
            android:text="0" />

        <Button
            android:id="@+id/btn16"
            android:layout_marginHorizontal="2dp"
            android:onClick="btnOnClick"
            android:textColor="@color/black"
            android:backgroundTint="#D4D4D2"
            android:text="." />

        <Button
            android:id="@+id/btn17"
            android:layout_marginHorizontal="2dp"
            android:layout_weight="1"
            android:backgroundTint="@android:color/holo_orange_dark"
            android:onClick="btnOnClick"
            android:text="=" />

    </TableRow>
</TableLayout>